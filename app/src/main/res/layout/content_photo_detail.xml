<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_photo_detail">

    <ImageView
        android:saveEnabled="true"
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_photo"
        android:background="@drawable/background_function_bottom"
        android:gravity="center"
        android:paddingTop="15dp"


        >

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_function"
            android:padding="15dp"
            android:src="@drawable/ic_sharre" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_share"
            android:background="@drawable/background_function"
            android:padding="15dp"
            android:src="@drawable/ic_more" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_more"
            android:background="@drawable/background_function"
            android:padding="15dp"
            android:src="@drawable/ic_download" />

        <ImageView
            android:id="@+id/iv_love"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_download"
            android:background="@drawable/background_function"
            android:padding="15dp"
            android:src="@drawable/ic_heart" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_loved"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_download"
            android:background="@drawable/background_function"
            android:padding="15dp"
            android:src="@drawable/ic_love_love" />
    </RelativeLayout>


</RelativeLayout>